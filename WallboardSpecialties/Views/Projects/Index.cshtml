@model IEnumerable<WallboardSpecialties.Models.Project>

@{
    ViewBag.Title = "Index";
}

<div class="w3-card-4 w3-blue-gray" style="padding:15px">
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Location")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDate)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Location.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                <b> @Html.ActionLink("Edit", "Edit", new { id = item.ProjectID }) </b>|
              
                <b> @Html.ActionLink("Delete", "Delete", new { id = item.ProjectID })</b>
            </td>
        </tr>
    }

</table>
</div>